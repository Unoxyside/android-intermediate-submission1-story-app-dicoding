<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyStoryApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorSecondaryContainer">@color/lime</item>
        <item name="colorPrimaryContainer">@color/lime</item>
    </style>

    <style name="Theme.App.MyStoryApp" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/lime</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/storysphere_green</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.MyStoryApp</item>

        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>
</resources>